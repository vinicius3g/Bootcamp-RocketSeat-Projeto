{% extends "layout.njk"%} 

{% block head %}
    <title>Sobre - Vinícius Dos Santos Paixao</title>
{% endblock %}

{% block content %}
<div id="wrapper">
  <img
    src="{{about.avatar_url}}"
    alt="image de {{about.name}}"
  />
  <h1>{{about.name}}</h1>
  <h2>{{about.role}}</h2>
  <p>{{about.description}}</p>
</div>


<div class="links-footer">
  {% for link in about.links %}
  <a href="{{link.url}}" target="__blank">{{link.name}}</a>
  {% endfor %}
</div>
{% endblock %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="index.css" />
    <title>Vinicius Paixão</title>
  </head>

  <body>
    <header>
      <div class="links">
        <a href="/">Sobre</a>
        <a href="/portifolio">Aulas</a>
      </div>
    </header>
  </body>
</html>
